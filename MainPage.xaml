<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp10.MainPage">

    <VerticalStackLayout 
        Margin="0, 20, 0, 0"
        Spacing="15" 
        HorizontalOptions="Center">
        
        <Button x:Name="btn1" 
                Clicked="ButtonClick"
                Text="0"
                TextColor="Black" 
                BackgroundColor="AntiqueWhite"></Button>
        
        <Button x:Name="btn2" 
                Clicked="ButtonClick"
                Text="1" 
                TextColor="Black" 
                BackgroundColor="AntiqueWhite"></Button>
        
        <Button x:Name="btn3" 
                Clicked="ButtonClick"
                Text="2" 
                TextColor="Black" 
                BackgroundColor="AntiqueWhite"></Button>
        
        <Button x:Name="btn4" 
                Clicked="ButtonClick"
                Text="3" 
                TextColor="Black" 
                BackgroundColor="AntiqueWhite"></Button>

        <Label
            x:Name="Label">

        </Label>
    </VerticalStackLayout>

  
</ContentPage>
